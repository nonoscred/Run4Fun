{% extends "::base.html.twig" %}

{% block stylesheets %}
{{ parent() }}
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" type="text/css" href="/bootstrap/css/bootstrap.css" />
    <link rel="stylesheet" type="text/css" href="/bootstrap/css/bootstrap-responsive.css" />
{% endblock %}

{% block body %}

    {{ parent() }}

    <div class="navbar navbar-inverse">
        <div class="navbar-inner">
            <div class="container">
                <!-- .btn-navbar is used as the toggle for collapsed navbar content -->
                <a class="btn btn-navbar" data-toggle="collapse" data-target=".nav-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </a>

                <a class="brand" href="#">Run4Fun</a>

                <div class="nav-collapse collapse">
                    <ul class="nav">
                        <li><a href="{{ path('admin_partner') }}">Partner</a></li>
                        <li><a href="{{ path('admin_user') }}">User</a></li>
                        <li><a href="{{ path('admin_course') }}">Course</a></li>
                        <li><a href="{{ path('admin_message') }}">Message</a></li>
                        <li><a href="{{ path('admin_subscription') }}">Subscription</a></li>
                        <li><a href="{{ path('admin_level') }}">Level</a></li>
                        <li><a href="{{ path('admin_aim') }}">Aim</a></li>
                        <li><a href="{{ path('admin_map') }}">Map</a></li>
                        <li><a href="{{ path('admin_address') }}">Address</a></li>
                    </ul>
                </div>
            </div>
        </div>
    </div>

    {% for flashMessage in app.session.flashbag.get('info') %}
        <div class="alert alert-info">
            <button type="button" class="close" data-dismiss="alert">×</button>
            {{ flashMessage }}
        </div>
    {% endfor %}

    {% for flashMessage in app.session.flashbag.get('error') %}
        <div class="alert alert-error">
            <button type="button" class="close" data-dismiss="alert">×</button>
            {{ flashMessage }}
        </div>
    {% endfor %}

    {% for flashMessage in app.session.flashbag.get('success') %}
        <div class="alert alert-success">
            <button type="button" class="close" data-dismiss="alert">×</button>
            {{ flashMessage }}
        </div>
    {% endfor %}

{% endblock %}

{% block javascripts %}
{{ parent() }}
    <script type="text/javascript" src="http://code.jquery.com/jquery.min.js"></script>
    <script type="text/javascript" src="/bootstrap/js/bootstrap.js"></script>
{% endblock %}
