{% extends "R4FRunnerBundle::adminbase.html.twig" %}

{% block body %}

{{ parent() }}

<div class="page-header">
  <h1>{% trans %}List{% endtrans %}</h1>
</div>

<table class="table table-bordered table-striped table-condensed records_list">
    <thead>
        <tr>
            <th>Id</th>
            <th>Description</th>
            <th>Length</th>
            <th>Meeting_point</th>
            <th colspan="3">{% trans %}Actions{% endtrans %}</th>
        </tr>
    </thead>
    <tbody>
    {% for entity in entities %}
        <tr>
            <td><a href="{{ path('admin_course_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
            <td>{{ entity.description }}</td>
            <td>{{ entity.length }}</td>
            <td>{{ entity.meetingpoint }}</td>    <td>
                    <a class="btn btn-block" href="{{ path('admin_course_show', { 'id': entity.id }) }}">{% trans %}show{% endtrans %}</a>
            </td>    <td>
                    <a class="btn btn-block btn-primary" href="{{ path('admin_course_edit', { 'id': entity.id }) }}">{% trans %}edit{% endtrans %}</a>
            </td>    <td>
                    {% render 'R4FRunnerBundle:Course:deleteForm' with { 'id': entity.id } %}
            </td>
        </tr>
    {% endfor %}
    </tbody>
</table>

<ul class="list_actions">
    <li>
        <a class="btn btn-primary" href="{{ path('admin_course_new') }}">
            {% trans %}Create a new entry{% endtrans %}
        </a>
    </li>
</ul>
{% endblock body %}
